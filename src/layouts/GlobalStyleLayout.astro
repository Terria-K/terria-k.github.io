---
import '@fontsource/fira-sans';
import '@fontsource-variable/roboto-slab';
import '@fontsource/lexend-deca';
import '@fontsource/lexend-deca/700.css';
import '../tailwind.css';
---

<style is:global>

html {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, "Roboto Slab Variable", "Fira Sans", 'Open Sans', 'Helvetica Neue', sans-serif;
  scroll-behavior: smooth;
  color-scheme: dark;
}

body {
  background: linear-gradient(176deg, #12181b 50%, #202737 100%);
  min-height: 100vh;
  background-attachment: fixed;
}

code {
  font-family:
    Menlo,
    Monaco,
    Lucida Console,
    Liberation Mono,
    DejaVu Sans Mono,
    Bitstream Vera Sans Mono,
    Courier New,
    monospace;
}

/* Chrome, Safari, Edge, Opera */
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  appearance: textfield;
}

/* width */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

/* Track */
::-webkit-scrollbar-track {
  background: var(--color-midnight);
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: var(--color-midnight-light);
  border-radius: 5px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: var(--color-midnight-lighter);
}
</style>
