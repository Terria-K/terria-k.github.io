        <SkillsIcon name="tauri-dark"/>
        <SkillsIcon name="cpp"/>
        <SkillsIcon name="mysql-dark"/>
        <SkillsIcon name="debian-dark"/>
        <SkillsIcon name="arch-dark"/>
