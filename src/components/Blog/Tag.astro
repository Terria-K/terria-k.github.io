---
interface Props {
    tag: string | string[]
}

const prop = Astro.props;
---

<div class="flex flex-row gap-2 text-sm font-sans">
  {
    prop.tag 
      ? (typeof prop.tag == "string")
        ? <div class="flex">
            <a class="bg-slate-500 px-2 py-1 rounded-full" href={`/posts/tags/${prop.tag}`}>{prop.tag.toUpperCase()}</a>
          </div>
        : prop.tag.map(element => 
          <div class="flex">
            <a class="bg-slate-500 px-2 py-1 rounded-full" href={`/posts/tags/${element}`}>{element.toUpperCase()}</a>
          </div>
        )
      : null
  }
</div>