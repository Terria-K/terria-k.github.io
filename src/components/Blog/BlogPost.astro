---
interface Props {
    title: string,
    description: string,
    date: string,
    url: string | undefined
}

const prop = Astro.props;
---

<a href={prop.url} class="bg-gray-800 w-full rounded-lg p-4 lg:grid-cols-2 items-center grid group">
    <img class="w-96 h-80 object-cover" src="/arts/Sayonara.png"/>
    <div class="w-full rounded-r-xl max-md:rounded-xl p-3 flex flex-col gap-2">
      <h2 class="text-gray-500">{prop.date}</h2>
      <h1 class="text-4xl font-bold mt-2">{prop.title}</h1>
      <p class="mt-4">{prop.description}</p>
    </div>
</a>