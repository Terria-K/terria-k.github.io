---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import fs from 'path';

const pictures: ImageMetadata[] = await Astro.glob("/src/assets/webp_arts/**/*.webp").then(x => x.map(x => x.default).reverse().slice(0, 7));
---

<div class="w-full text-white bg-gray-800 rounded-lg p-4 gap-4 flex flex-col">
  <p class="text-center font-bold text-3xl select-none">Artworks</p>
  <div class="art-container bg-gray-900 rounded-lg p-4 masonry-sm md:masonry-md lg:masonry-lg md:gap-0 h-[600px] overflow-auto md:overflow-hidden md:h-auto no-scrollbar">
    {
      pictures
        ? pictures.map(async x => {
          const baseName = fs.basename(x.src);
          const artworkName = baseName.split('.')[0].substring(11).replaceAll("_", " ");
          const year = baseName.split("-")[2].substring(0, 4);
          return <a href={`/arts/${year}/${artworkName}`}>
              <Image src={x} alt={fs.basename(x.src).split('.')[0]} loading="lazy"/>
            </a>
        })
        : null
    }
    <a href="/arts" class="h-[300px] bg-midnight hover:bg-midnight-light duration-300 cursor-pointer py-8 rounded-md flex flex-col items-center justify-center text-4xl font-bold select-none">
      <Icon name="ph:cards"/>
      <p>More Arts</p>
    </a>
  </div>
</div>

<style>
  .art-container {
    scroll-snap-type: y mandatory
  }

  .art-container > a {
    scroll-snap-align: center;
  }
</style>
