---
import { Image } from "astro:assets";
interface Props {
    src: ImageMetadata,
    year: string,
    artworkName: string,
    loadType: "eager" | "lazy"
}

const { src, year, artworkName, loadType} = Astro.props;
---

<a href={`/arts/${year}/${artworkName}`}>
    <Image
    class="object-cover"
    src={src}
    alt={artworkName}
    loading={loadType}
    />
</a>