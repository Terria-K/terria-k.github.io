---
import { Icon } from "astro-icon/components";
import Accordion from "../Accordion/Accordion.astro";
import If from "../ControlFlow/If.astro";

interface Props {
  title: string,
  description: string,
  url: string,
  icon: string,
  hasDerivedPages?: boolean
}


const props = Astro.props;
---

<div class="bg-midnight-light px-4 mx-10 flex flex-col rounded-xl">
  <div class="flex">
    <Icon class="w-20 h-auto" name={props.icon}/>
    <div class="flex flex-col mx-4 my-2">
      <h2 class="font-bold text-xl">{props.title}</h2>
      <p>{props.description}</p>
      <a href={props.url}>
        <button class="shadow-lg text-center font-bold bg-slate-600 rounded-lg px-3 py-2 text-md duration-300 hover:bg-slate-400">
          Visit
        </button>
      </a>
    </div>
  </div>

  <If when={props.hasDerivedPages}>
    <Accordion title="Show derived pages">
      <slot/>
    </Accordion>
  </If>
</div>