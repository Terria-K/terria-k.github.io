---
import Image from 'astro/components/Image.astro';

interface Props {
  name: string,
  description: string,
  slug: string,
  image: ImageMetadata,
}

const { name, description, slug, image } = Astro.props;
---

<li class="list-none">
  <div class="bg-gray-800 p-4 rounded">
    <div class="flex flex-col md:flex-row gap-4">
      <a href={`/games/${slug}`}>
        <Image class="object-cover h-full" src={image} alt={name} width="180" height="143"/>
      </a>
      <div>
        <a href={`/games/${slug}`} class="font-bold text-3xl">{name}</a>
        <p class="text-gray-300 text-xl">{description}</p>
        <a href={`/games/${slug}`}>
          <button class="hover:bg-red-400 duration-300 bg-red-500 px-4 py-2 text-2xl md:px-4 md:py-2 rounded mt-4">View</button>
        </a>
      </div>
    </div>
  </div>
</li>