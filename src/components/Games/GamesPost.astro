---
import Image from 'astro/components/Image.astro';
import Button from '../Button/Button.astro';

interface Props {
  name: string,
  description: string,
  slug: string,
  image: ImageMetadata,
}

const { name, description, slug, image } = Astro.props;
---

<li class="list-none">
  <div class="bg-gray-800 p-4 rounded-sm grid md:flex-row gap-4">
    <a href={`/projects/${slug}`}>
      <Image class="object-cover h-full" src={image} alt={name}/>
    </a>

    <div class="grid gap-2">
      <a href={`/projects/${slug}`} class="font-bold text-3xl">{name}</a>
      <p class="text-gray-300 text-xl">{description}</p>
      <Button href={`/projects/${slug}`} theme="primary" color="!bg-red-500">View</Button>
    </div>
  </div>
</li>
