---
import Skills from '../components/Skills/Skills.astro';
import Layout from '../layouts/Layout.astro';
import Art from '../components/Arts/Art.astro';
import { Image } from 'astro:assets';

import relentless_night from "../assets/webp_arts/2023/12-31-2023|Relentless_Night.png.webp";
import { Icon } from 'astro-icon/components';
import AboutMe from '../components/AboutMe.astro';
---

<Layout>
  <meta property="og:title" content="Teuria Website" slot="head"/>
  <meta property="og:image" content={relentless_night.src} slot="head"/>
  <meta property="og:description" content="This is Teuria's website for showcasing their arts, website, and developed games. It will also contain work in progress or preview stuff.
          There are also blogs that will be posted in the blog here." slot="head"/>

  <section class="w-full text-white">
    <article class="relative h-[95svh] bg-opacity-40 bg-black ">
      <div class="w-full h-full absolute object-cover inset-0 z-[-1]">
        <Image class="w-full h-full object-cover" src={relentless_night} alt="banner" draggable="false" loading="eager"/>
      </div>
      <div class="h-full flex items-center justify-center">
        <div class="grid gap-6">
          <p class="text-center font-extrabold font-deca text-5xl px-4">
            Welcome, I am Teuria!
          </p>
          <div class="max-w-[27rem] mx-auto grid gap-4">
            <p class="px-6 font-sans text-xl">
              This is Teuria's website for showcasing their arts, website, and developed games. It will also contain work in progress or preview stuff.
              There are also blogs that will be posted in the blog here.
            </p>
            <div class="mx-10 grid lg:grid-cols-2 gap-1">
              <a href="/commission" class="grid items-center shadow-lg text-center font-bold bg-slate-600 rounded-full h-14 text-2xl duration-300 hover:bg-slate-400">
                Commission
              </a>
              <a href="#about-me" class="grid items-center shadow-lg text-center text-2xl font-bold bg-slate-600 rounded-full h-14 duration-300 hover:bg-slate-400">
                About Me
              </a>
            </div>
            <p class="flex justify-center items-center w-full font-bold text-gray-200 text-xl gap-1">
              BUY ME A <a target="_blank" href="https://ko-fi.com/terriakatsura" class="text-cyan-400 underline">Kofi</a> <Icon class="inline w-6 h-6" name="simple-icons:kofi"/>
            </p>
          </div>
        </div>
      </div>
    </article>
  </section>

  <header class="mx-auto max-w-[96rem] px-5 lg:px-10 space-y-4 pb-4">
    <AboutMe/>
    <Skills/>
    <Art/>
  </header>
</Layout>
